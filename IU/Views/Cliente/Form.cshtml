@model AlphaNet.PassagemAerea.Aplicacao.Clientes.Data.ClienteData
@{
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Cliente</h1>
            </hgroup>
        
            <form method="post" action="Salvar">
                <fieldset>
                    <legend>Cadastro de Cliente</legend>
                <input type="hidden" name="clienteId" value="@Model.clienteId"/>
                <label>Nome: </label><input type="text" name="nome" value="@Model.nome"/>
                <br>
                <label>Email: </label><input type="text" name="email" value="@Model.email"/><br />
                <br><input type="submit" value="Salvar" />
                </fieldset>
            </form>
             <a href="@Url.Action("Index","Cliente")"><img src="~/Content/themes/base/images/voltar.png" id="bt-voltar" /></a>  
        </div>
    </section>
</div>
