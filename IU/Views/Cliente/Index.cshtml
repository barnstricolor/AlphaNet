@model IEnumerable<AlphaNet.PassagemAerea.Aplicacao.Clientes.Data.ClienteData>

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Lista de Clientes</h1>
            </hgroup>
            <p>
                Lista de Clientes Cadastrados
            </p>
                <nav>
                    <ul id="menu02">
                        <li>@Html.ActionLink("Novo Cliente","Novo", "Cliente")</li>
                    </ul>
                </nav>
                @if (Model != null) {
                    <table>
                        @foreach(var cliente in Model)
                        {            
                            <tr>    
                                <td>@Html.ActionLink("editar","Editar",new {clienteId = cliente.clienteId})</td>
                                <td>@Html.ActionLink("excluir","Excluir",new {clienteId = cliente.clienteId})</td>
                                <td>@cliente.nome</td>
                                <td>@cliente.email</td>
                            </tr>        
                        }
                    </table>
                }
        </div>
    </section>
</div>
