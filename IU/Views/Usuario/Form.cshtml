@model AlphaNet.PassagemAerea.Aplicacao.Avioes.Data.AviaoData

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Avião</h1>
            </hgroup>
         
            <form method="post" action="Salvar">
                <fieldset>
                    <legend>Cadastro de Avião</legend>
                <input type="hidden" name="aviaoId" value="@Model.aviaoId"/>
                <label>Modelo: </label><input type="text" name="modelo" value="@Model.modelo"/>
                <br>
                <label>Assento: </label><input type="text" name="assentos" value="@Model.assentos"/>
                <br><input type="submit" value="Salvar" />
                    </fieldset>
            </form>
           
        </div>
    </section>
</div>
        