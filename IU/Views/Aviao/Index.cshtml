@model IEnumerable<AlphaNet.PassagemAerea.Aplicacao.Avioes.Data.AviaoData>

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Lista de Aviões</h1>
            </hgroup>
            <p>
                Lista de Aviões Cadastrados
            </p>
                <nav>
                    <ul id="menu02">
                        <li>@Html.ActionLink("Novo Aviao","Novo", "Aviao")</li>
                    </ul>
                </nav>
                @if (Model != null) {
                    <table>
                        @foreach(var aviao in Model)
                        {            
                            <tr>    
                                <td>@Html.ActionLink("editar","Editar",new {aviaoId = aviao.aviaoId})</td>
                                <td>@Html.ActionLink("excluir","Excluir",new {aviaoId = aviao.aviaoId})</td>
                                <td>@aviao.modelo</td>
                                <td>@aviao.assentos</td>
                            </tr>        
                        }
                    </table>
                }
        </div>
    </section>
</div>
