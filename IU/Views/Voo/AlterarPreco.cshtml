@model AlphaNet.PassagemAerea.Aplicacao.Voos.Data.VooData
@{
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Voo - Alteração de preços</h1>
            </hgroup>
        
            <form method="post" action="AlterarPreco">
                <fieldset>
                    <legend>Alteração de Preço</legend>
                <input type="hidden" name="vooId" value="@Model.vooId" />
                @Html.Label("Modelo: ")@Model.aviaoModelo<br>
                @Html.Label("Origem: ")@Model.cidadeOrigemNome<br>
                @Html.Label("Destino: ")@Model.cidadeDestinoNome<br>
                @Html.Label("Partida: ")@Model.partida<br>
                @Html.Label("Assentos: ")@Model.totalAssentos<br>
                @Html.Label("Reservados: ")@Model.reservados<br>
                @Html.Label("Preço Atual: ")@Model.preco<br>

                @Html.Label("Preço: ")<input type="text" name="preco" value="@Model.preco"/><br>
                @Html.Label("Preço Promocional?")@Html.CheckBox("promocional")
                <br><input type="submit" value="Salvar" />
                    </fieldset>
            </form>
              <a href="@Url.Action("Index","vOO")"><img src="~/Content/themes/base/images/voltar.png" id="bt-voltar" /></a>  
        </div>
    </section>
</div>
