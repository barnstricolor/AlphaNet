@model AlphaNet.PassagemAerea.Aplicacao.Voos.Data.VooData
@{
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Reservas</h1>
            </hgroup>
            <p>
                Reservas
            </p>
                @if (Model != null) {
                    @Model.aviaoModelo
                    @Model.cidadeOrigemNome
                    @Model.cidadeDestinoNome
                    @Model.partida
                    @Model.totalAssentos
                    @Model.reservados
                 
                    
                 <div> <a href="@Url.Action("NovaReserva",new {vooId = Model.vooId})"><img src="~/Content/themes/base/images/nova_reserva.png" id="bt-nova-reserva"/></a></div>
                     
                      <table>
                        <tr>
                            <th></th>
                            <th>Cliente</th>
                            <th>Preço</th>
                            <th>Assentos</th>
                        </tr>   
                        @foreach(var reserva in Model.reservas())
                        {         
                            <tr>
                                <td>@Html.ActionLink("Cancelar","Cancelar",new {vooId = Model.vooId, clienteId = reserva.clienteId})</td>                                    
                                <td>@reserva.clienteNome</td>
                                <td>@reserva.preco</td>
                                <td>@reserva.assentos</td>                                
                            </tr>        
                        }
                    </table>
                }
        </div>
    </section>
</div>
