@model IEnumerable<AlphaNet.PassagemAerea.Aplicacao.Voos.Data.VooData>
@{
    Layout = "~/Views/Shared/_Layout_adm.cshtml";
}

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Lista de Voos</h1>
            </hgroup>
                        <nav>
                    <ul id="menu02">
                     <li><a href="@Url.Action("Novo", "Voo")"><img src="~/Content/themes/base/images/novo_voo.png" id="bt-novo-voo" /></a></li>
                    </ul>
                </nav>
                @if (Model != null) {
                    <table border="0">
                        <tr>
                            <th></th>
                            <th>Modelo</th>
                            <th>Origem</th>
                            <th>Destino</th>
                            <th>Partida</th>
                            <th>Reservados</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>   

                        @foreach(var voo in Model)
                        {            
                            <tr>    
                              
                                <td><a href="@Url.Action("Excluir",new {vooId = voo.vooId})"><img src="~/Content/themes/base/images/excluir.png" id="bt-excluir" /></a></td>
                                <td>@voo.aviaoModelo</td>
                                <td>@voo.cidadeOrigemNome</td>
                                <td>@voo.cidadeDestinoNome</td>
                                <td>@voo.partida</td>
                                <td>@voo.reservados/@voo.totalAssentos</td>                               
                                
                                @if (voo.promocional){
                                    <td>@Html.ActionLink("(*)  "+voo.preco.ToString(),"AlterarPreco",new {vooId = voo.vooId})</td>
                                }else{
                                    <td>@Html.ActionLink(voo.preco.ToString(),"AlterarPreco",new {vooId = voo.vooId})</td>
                                }      
                                       
                                
                                @* VERIFICAR ESSE CÓDIGO *@
                                                                                   
                               <td><a href="@Url.Action("NovaReserva","Voo",new {vooId = voo.vooId})"><img src="~/Content/themes/base/images/nova_reserva.png" id="bt-nova-reserva"/></a></td>

                               @* <td>@Html.ActionLink("Reservas","Reservas",new {vooId = voo.vooId})</td>*@
                                 <td><a href="@Url.Action("Reservas","Voo",new {vooId = voo.vooId})"><img src="~/Content/themes/base/images/reserva.png" id="bt-reserva" /></a></td>

                                
                            </tr>        
                        }
                    </table>
                }
        </div>
    </section>
</div>
