@model IEnumerable<AlphaNet.PassagemAerea.Aplicacao.Voos.Data.VooData>

<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Lista de Aviões</h1>
            </hgroup>
            <p>
                Lista de Voos
            </p>
                <nav>
                    <ul id="menu02">
                        <li>@Html.ActionLink("Novo Voo","Novo", "Voo")</li>
                    </ul>
                </nav>
                @if (Model != null) {
                    <table>
                        @foreach(var voo in Model)
                        {            
                            <tr>    
                                <td>@Html.ActionLink("editar","Editar",new {vooId = voo.vooId})</td>
                                <td>@Html.ActionLink("excluir","Excluir",new {vooId = voo.vooId})</td>
                                <td>@voo.aviaoModelo</td>
                                <td>@voo.cidadeOrigemNome</td>
                                <td>@voo.cidadeDestinoNome</td>
                                <td>@voo.partida</td>
                            </tr>        
                        }
                    </table>
                }
        </div>
    </section>
</div>
