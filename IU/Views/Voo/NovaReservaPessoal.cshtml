@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 	<div id="conteudo">

         <div id="conteudo-central">
<div id="body">

    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Reserva</h1>
            </hgroup>
            <p>
                Nova Reserva
            </p>
            <form method="post" action="NovaReservaPessoal">
          
                <input type="hidden" name="vooId" value="@ViewBag.voo.vooId" />
                <input type="hidden" name="quantidadeAssentos" value="@ViewBag.mapaAssentos.Count"/>
                <input type="hidden" name="clienteId" value="@ViewBag.clienteId"/>
                @Html.Label("Voo ")
                @ViewBag.voo.aviaoModelo 
                @ViewBag.voo.cidadeOrigemNome
                @ViewBag.voo.cidadeDestinoNome
                @ViewBag.voo.partida

                @Html.Label("Cliente ")
                @ViewBag.nome 
                @ViewBag.email
                @foreach (AlphaNet.PassagemAerea.Aplicacao.Voos.Data.AssentoData assento in ViewBag.mapaAssentos)
                {
                    if (assento.reservado){
                        @Html.Raw("R[" + assento.numero.ToString() + "]")
                    }else{
                        @Html.Raw(" [" + assento.numero.ToString() + "]")@Html.CheckBox( "chk" + assento.numero.ToString())
                    }
                }
                <br><input type="submit" value="Salvar" />

            </form>
        </div>
    </section>
</div>
</div>
         </div>